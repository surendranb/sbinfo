---
interface Props {
  title: string;
  date: string;
  slug: string;
  category: string;
}

const { title, date, slug, category } = Astro.props;
---

<a href={`/blog/${slug}`} class="group block h-full transform hover:-translate-y-1 transition-all duration-300">
  <article class="bg-white px-6 py-5 rounded-lg h-full border border-primary/5 hover:border-accent/20 transition-colors duration-300">
    <div class="flex flex-col h-full">
      <span class="text-xs font-medium text-accent mb-3">{category}</span>
      
      <h3 class="text-lg font-space-grotesk font-bold text-primary group-hover:text-accent transition-colors duration-300 mb-3">
        {title}
      </h3>
      
      <div class="mt-auto pt-4 border-t border-primary/5">
        <time class="text-xs text-primary/50 font-medium">
          {date}
        </time>
      </div>
    </div>
  </article>
</a>